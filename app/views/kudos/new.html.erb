<%= form_with model: @kudo, url: kudos_path, local: true do |f| %>

  <!-- Receiver -->
  <div>
    <%= f.label :receiver_id, "Send to" %><br>
    <%= f.collection_select :receiver_id,
          @users,
          :id,
          :username,
          { prompt: "Choose a user" } %>
  </div>

  <!-- Category -->
  <div>
    <%= f.label :category %><br>
    <%= f.select :category,
          Kudo::CATEGORIES,
          { prompt: "Choose a category" } %>
  </div>

  <!-- Message -->
  <div>
    <%= f.label :message %><br>
    <%= f.text_area :message,
          rows: 4,
          placeholder: "Write your message here (max 500 characters)" %>
  </div>

  <!-- Submit -->
  <div>
    <%= f.submit "Send Kudo" %>
  </div>

<% end %>
