<% if @kudo.errors.any? %>
  <div class="form-errors">
    <h3><%= pluralize(@kudo.errors.count, "error") %> prevented this kudo from being sent:</h3>
    <ul>
      <% @kudo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @kudo, local: true do |f| %>

  <!-- Receiver -->
  <div>
    <%= f.label :receiver_id, "Send to" %><br>
    <%= f.collection_select :receiver_id,
          @users,
          :id,
          :username,
          prompt: "Choose a user" %>
  </div>

  <!-- Category -->
  <div>
    <%= f.label :category %><br>
    <%= f.select :category,
          Kudo::CATEGORIES,
          prompt: "Choose a category" %>
  </div>

  <!-- Message -->
  <div>
    <%= f.label :message %><br>
    <%= f.text_area :message, rows: 4 %>
  </div>

  <!-- Submit -->
  <div>
    <%= f.submit "Send Kudo" %>
  </div>

<% end %>
